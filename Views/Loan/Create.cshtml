@{
    ViewBag.Title= "Add Loan";
}
<main>
    <div class="page-section features" style="margin": 150px 0px">
        <div class="container">
            <h4>Add User</h4>
            <form asp-action="Create" asp-controller="Loan">
                <div class="form-group">
                    <label for="BookId">Book Id:</label>
                    <input name="BookId" type="int" class="form-control" id="BookId">
                </div>
                <div class="form-group">
                    <label for="UserId">User Id:</label>
                    <input name="UserId" type="text" class="form-control" id="UserId">
                </div>
                <button type="submit" class="btn btn-default">Save</button>
            </form>
        </div>
    </div>
</main>