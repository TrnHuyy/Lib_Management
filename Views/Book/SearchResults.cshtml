@model List<Lib2.Models.Book>

<h2>Search Results</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Category</th>
                <th>IsBorrowed</th>
                <!-- Thêm các cột khác nếu cần -->
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Category</td>
                    <td>@book.IsBorrowed</td>
                    <td>
                        <form asp-action="CreateLoan" asp-controller="Loan" method="post">
                            <input type="hidden" name="bookId" value="@book.Id" />
                            <button type="submit">Mượn</button>
                        </form>
                    </td>
                    <!-- Thêm dữ liệu cho các cột khác nếu cần -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có sách nào.</p>
} 
