@model List<Lib2.Models.User>

<h2>All Debts</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Debt(VNƒê)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
