@model List<Lib2.Models.Book>

<h1>Danh sách sách</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Category</th>
                <th>IsBorrowed</th>
                <!-- Thêm các cột khác nếu cần -->
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Category</td>
                    <td>@book.IsBorrowed</td>
                    <td>
                        <form asp-action="CreateLoan" asp-controller="Loan" method="post">
                            <input type="hidden" name="bookId" value="@book.Id" />
                            <button type="submit">Mượn</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="ReadBook" asp-controller="Book" method="get">
                            <input type="hidden" name="bookId1" value="@book.Id" />
                            <button type="submit">Đọc</button>
                        </form>
                    </td>
                    <!-- Thêm dữ liệu cho các cột khác nếu cần -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có sách nào.</p>
} 
