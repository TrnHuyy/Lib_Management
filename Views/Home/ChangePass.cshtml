@{
    ViewBag.Title= "Change Pass";
}
<main>
    <div class="page-section features" style="margin": 150px 0px">
        <div class="container">
            <h4>Change Your Pass</h4>
            <form asp-action="ChangePass" asp-controller="Home" >
                <div class="form-group">
                    <label for="oldPass">Type Old Pass:</label>
                    <input name="oldPass" type="text" class="form-control" id="oldPass">
                </div>
                <div class="form-group">
                    <label for="newPass">Type New Pass:</label>
                    <input name="newPass" type="text" class="form-control" id="newPass">
                </div>
                <button type="submit" class="btn btn-default">Change</button>
            </form>
        </div>
    </div>
</main>