@{
    ViewBag.Title= "Change Name";
}
<main>
    <div class="page-section features" style="margin": 150px 0px">
        <div class="container">
            <h4>Search Books</h4>
            <form asp-action="ChangeName" asp-controller="Home" >
                <div class="form-group">
                    <label for="name">Type New Name:</label>
                    <input name="name" type="text" class="form-control" id="name">
                </div>
                <button type="submit" class="btn btn-default">Change</button>
            </form>
        </div>
    </div>
</main>