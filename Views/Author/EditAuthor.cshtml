@{
    ViewBag.Title= "Edit";
}
<main>
    <div class="page-section features" style="margin": 150px 0px">
        <div class="container">
            <h4>Edit Author</h4>

            <h3>Title</h3>
            <form asp-action="ChangeName" asp-controller="Author" method="post">
                <input type="hidden" name="id" value="@ViewBag.Id" />
                <div class="form-group">
                    <label for="name">Name: </label>
                    <input name="name" type="text" class="form-control" id="name">
                </div>
                <button type="submit" >Change Name</button>
            </form>

            <h3>Birthdate</h3>
            <form asp-action="ChangeBirthdate" asp-controller="Author" method="post">
                <input type="hidden" name="id" value="@ViewBag.Id" />
                <div class="form-group">
                    <label for="birthdate">Birthdate: </label>
                    <input name="birthdate" type="date" class="form-control" id="birthdate">
                </div>
                <button type="submit" >Change Birthdate</button>
            </form>

            <h3>Describe</h3>
            <form asp-action="ChangeDescribe" asp-controller="Author" method="post">
                <input type="hidden" name="id" value="@ViewBag.Id" />
                <div class="form-group">
                    <label for="describe">Describe: </label>
                    <input name="describe" type="text" class="form-control" id="describe">
                </div>
                <button type="submit" >Change Describe</button>
            </form>
        </div>
    </div>
</main>